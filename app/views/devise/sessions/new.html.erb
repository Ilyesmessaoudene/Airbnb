<div class="form container w-75">
  <div class="title d-flex justify-content-center my-5">
    <h1>Log In</h1>
  </div>
  <div class='partial-form'>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="partial-btn-submit">
        <%= f.button :submit, "Log in", class: "btn-submit px-5" %>
      </div>
    <% end %>
  </div>
</div>
